<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBoxTWO"
        android:layout_width="@dimen/tamaño_caja"
        android:layout_height="@dimen/tamaño_caja"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/corazon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvBoxONE"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBoxONE"
        android:layout_width="@dimen/tamaño_caja"
        android:layout_height="@dimen/tamaño_caja"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/corazon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBoxThree"
        android:layout_width="@dimen/tamaño_caja"
        android:layout_height="@dimen/tamaño_caja"
        android:layout_marginStart="@dimen/margen"
        android:layout_marginTop="160dp"
        android:background="@drawable/corazon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBoxONE" />


    <TextView
        android:id="@+id/tvBoxFOUR"
        android:layout_width="@dimen/tamaño_caja"
        android:layout_height="@dimen/tamaño_caja"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/corazon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvBoxThree"
        app:layout_constraintTop_toBottomOf="@+id/tvBoxTWO" />

    <Button
        android:id="@+id/btnREANUDAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="68dp"

        android:text="REANUDAR"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnNuevo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="NUEVO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toEndOf="@+id/btnREANUDAR"
        app:layout_constraintTop_toBottomOf="@+id/tvBoxFOUR" />


</androidx.constraintlayout.widget.ConstraintLayout>